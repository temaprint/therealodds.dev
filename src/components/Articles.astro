---
import { getCollection } from 'astro:content';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

const allArticles = await getCollection('articles');
const articles = allArticles.filter(article => article.data.lang === lang);
const featuredArticles = articles.filter(article => article.data.featured);
const otherArticles = articles.filter(article => !article.data.featured);

// Sort by publish date (newest first)
featuredArticles.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
otherArticles.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<section class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
  <h2 class="text-2xl font-bold mb-6 text-gray-900 text-center">Educational Articles</h2>
  <p class="text-gray-600 text-center mb-8 max-w-3xl mx-auto">
    Learn more about the mathematics, psychology, and real-world impact of gambling through our educational articles. 
    <a href="/articles" class="text-primary-600 hover:text-primary-700 font-medium">View all articles ‚Üí</a>
  </p>

  <!-- Featured Articles -->
  {featuredArticles.length > 0 && (
    <div class="mb-8">
      <h3 class="text-xl font-semibold mb-4 text-primary-700 flex items-center">
        <span class="mr-2">‚≠ê</span>
        Featured Articles
      </h3>
      <div class="grid md:grid-cols-2 gap-6">
        {featuredArticles.map((article) => (
          <a 
            href={`/articles/${article.slug}`}
            class="block p-6 border border-primary-200 rounded-lg hover:bg-primary-50 transition-colors group"
          >
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h4 class="font-semibold text-primary-800 group-hover:text-primary-900 mb-2 line-clamp-2">
                  {article.data.title}
                </h4>
                <p class="text-sm text-gray-600 mb-3 line-clamp-3">
                  {article.data.description}
                </p>
              </div>
            </div>
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>{article.data.publishDate.toLocaleDateString()}</span>
              <div class="flex flex-wrap gap-1">
                {article.data.tags.slice(0, 2).map((tag) => (
                  <span class="px-2 py-1 bg-primary-100 text-primary-700 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  )}

  <!-- Other Articles -->
  {otherArticles.length > 0 && (
    <div>
      <h3 class="text-xl font-semibold mb-4 text-gray-700 flex items-center">
        <span class="mr-2">üìö</span>
        More Articles
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        {otherArticles.map((article) => (
          <a 
            href={`/articles/${article.slug}`}
            class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors group"
          >
            <h4 class="font-semibold text-gray-800 group-hover:text-gray-900 mb-2 text-sm line-clamp-2">
              {article.data.title}
            </h4>
            <p class="text-xs text-gray-600 mb-3 line-clamp-2">
              {article.data.description}
            </p>
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>{article.data.publishDate.toLocaleDateString()}</span>
              <div class="flex flex-wrap gap-1">
                {article.data.tags.slice(0, 1).map((tag) => (
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  )}

  <!-- View All Articles Link -->
  <div class="mt-8 text-center">
    <a 
      href="/articles" 
      class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
    >
      üìö View All Articles
    </a>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>