---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../../i18n/utils';
import { languages } from '../../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang: lang === 'en' ? undefined : lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const allArticles = await getCollection('articles');
const articles = allArticles.filter(article => article.data.lang === lang);
articles.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());

const featuredArticles = articles.filter(article => article.data.featured);
const regularArticles = articles.filter(article => !article.data.featured);
---

<Layout
  title={`${t('articles.title')} - ${t('site.title')}`}
  description="Comprehensive articles about gambling mathematics, psychology, and responsible gaming. Learn about house edge, RTP, cognitive biases, and real stories of gambling harm."
  keywords={[
    'gambling articles',
    'gambling psychology',
    'cognitive bias gambling',
    'responsible gaming education',
    'gambling harm prevention'
  ]}
>
  <div class="bg-white">
    <!-- Header -->
    <header class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center">
          <a href={getLocalizedPath('/', lang)} class="inline-flex items-center text-primary-100 hover:text-white mb-6 text-sm">
            ‚Üê {t('nav.home')}
          </a>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            üìö {t('articles.title')}
          </h1>
          <p class="text-xl text-primary-100 mb-4 max-w-3xl mx-auto">
            Learn about the mathematics, psychology, and real-world impact of gambling
          </p>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-4 py-12">
      
      <!-- Featured Articles -->
      {featuredArticles.length > 0 && (
        <section class="mb-16">
          <div class="flex items-center mb-8">
            <span class="text-3xl mr-3">‚≠ê</span>
            <h2 class="text-3xl font-bold text-gray-900">{t('articles.featured')}</h2>
          </div>
          <div class="grid md:grid-cols-2 gap-8">
            {featuredArticles.map((article) => (
              <article class="bg-white border-2 border-primary-200 rounded-xl p-8 hover:shadow-lg transition-all duration-300 group">
                <div class="mb-4">
                  <div class="flex flex-wrap gap-2 mb-4">
                    {article.data.tags.map((tag) => (
                      <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary-700 transition-colors">
                    {article.data.title}
                  </h3>
                  <p class="text-gray-600 mb-4 leading-relaxed">
                    {article.data.description}
                  </p>
                </div>
                <div class="flex items-center justify-between">
                  <div class="text-sm text-gray-500">
                    <span class="font-medium">{article.data.author}</span>
                    <span class="mx-2">‚Ä¢</span>
                    <span>{article.data.publishDate.toLocaleDateString()}</span>
                  </div>
                  <a 
                    href={getLocalizedPath(`/articles/${article.slug}`, lang)}
                    class="inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
                  >
                    Read Article ‚Üí
                  </a>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- All Articles -->
      <section>
        <div class="flex items-center mb-8">
          <span class="text-3xl mr-3">üìñ</span>
          <h2 class="text-3xl font-bold text-gray-900">{t('articles.all')}</h2>
        </div>
        
        <!-- Articles Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {articles.map((article) => (
            <article class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-md transition-all duration-300 group">
              <div class="mb-4">
                <div class="flex flex-wrap gap-2 mb-3">
                  {article.data.tags.slice(0, 2).map((tag) => (
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 rounded-full text-xs font-medium">
                      {tag}
                    </span>
                  ))}
                  {article.data.featured && (
                    <span class="px-2 py-1 bg-warning-100 text-warning-700 rounded-full text-xs font-medium">
                      ‚≠ê Featured
                    </span>
                  )}
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-700 transition-colors line-clamp-2">
                  {article.data.title}
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                  {article.data.description}
                </p>
              </div>
              <div class="flex items-center justify-between">
                <div class="text-xs text-gray-500">
                  <div class="font-medium">{article.data.author}</div>
                  <div>{article.data.publishDate.toLocaleDateString()}</div>
                </div>
                <a 
                  href={getLocalizedPath(`/articles/${article.slug}`, lang)}
                  class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium text-sm"
                >
                  Read ‚Üí
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Back to Home -->
      <div class="mt-12 text-center">
        <a 
          href={getLocalizedPath('/', lang)} 
          class="inline-flex items-center px-8 py-4 bg-gray-800 text-white rounded-lg hover:bg-gray-900 transition-colors font-medium text-lg"
        >
          ‚Üê {t('nav.home')}
        </a>
      </div>
    </main>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>