---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SlotMachine from '../components/SlotMachine.astro';
import Education from '../components/Education.astro';
import Articles from '../components/Articles.astro';
import Warnings from '../components/Warnings.astro';
import Resources from '../components/Resources.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="The Real Odds - See How Low Your Chances Really Are"
  description="Educational slot machine simulation showing the real mathematics behind gambling. Understand probability, house edge, and why the odds are always against you."
  keywords={[
    'slot machine simulator',
    'gambling simulator',
    'betting odds calculator',
    'casino mathematics',
    'gambling statistics'
  ]}
>
  <Header />
  
  <main class="max-w-6xl mx-auto px-4 py-8">
    <SlotMachine />
    <Education />
    <Articles />
    <Warnings />
    <Resources />
  </main>
  
  <Footer />
</Layout>